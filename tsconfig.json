{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "playwright"],
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@data/*": ["data/*"],
      "@pages/*": ["pages/*"],
      "@tests/*": ["tests/*"],
      "@fixtures/*": ["fixtures/*"]
    }
  },
  "include": ["config", "data", "fixtures", "pages", "tests", "playwright.config.ts"]
}
